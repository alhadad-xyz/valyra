{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "backend#dev": {
      "cache": false,
      "persistent": true
    },
    "backend#test": {
      "outputs": [
        ".coverage",
        "htmlcov/**"
      ]
    },
    "backend#migrate": {
      "cache": false
    }
  }
}