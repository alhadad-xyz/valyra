# Koyeb (automatically set by Koyeb)
KOYEB=true
KOYEB_PUBLIC_DOMAIN=valyra-backend.koyeb.app
KOYEB_APP_NAME=valyra-backend
PORT=8000

# Database
# Koyeb PostgreSQL format: postgresql://user:password@host:port/database
# Local development: postgresql://user:pass@localhost:5432/valyra_dev
DATABASE_URL=postgresql://user:pass@localhost:5432/valyra_dev
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# API Keys
GEMINI_API_KEY=AIzaSy...
COINBASE_AGENTKIT_KEY=xxx

# IPFS/Lighthouse
LIGHTHOUSE_API_KEY=your_lighthouse_api_key
IPFS_GATEWAY_URL=https://gateway.lighthouse.storage/ipfs/
PINATA_API_KEY=xxx
PINATA_SECRET_KEY=xxx

# Web3
BASE_RPC_URL=https://mainnet.base.org
BASE_CHAIN_ID=8453

# App Config
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Platform
PLATFORM_FEE_PERCENTAGE=2.5
TREASURY_ADDRESS=0x...
